{
  "name": "ngx-jwt",
  "version": "0.3.0",
  "description": "Angular4+ module for injecting JWT into HttpClient requests.",
  "main": "ngx-jwt.bundle.js",
  "module": "index.js",
  "jsnext:main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "rm -rf dist && npm run lint && tsc -p tsconfig-esm.json && rollup -c rollup.config.js dist/index.js > dist/ngx-jwt.bundle.js && cp package.json dist && ngc && cp README.md dist && cp LICENSE.md dist",
    "test": "karma start --single-run",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "release": "standard-version",
    "npmpublish": "cd dist && npm publish",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rars/ngx-jwt"
  },
  "keywords": [
    "Angular",
    "ng",
    "JWT"
  ],
  "author": "Richard Russell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rars/ngx-jwt/issues"
  },
  "homepage": "https://github.com/rars/ngx-jwt#readme",
  "peerDependencies": {
    "jwt-inspect": ">=0.1.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.10.7",
    "@angular/animations": "^7.1.2",
    "@angular/cli": "^7.1.2",
    "@angular/common": "^7.1.2",
    "@angular/compiler": "^7.1.2",
    "@angular/compiler-cli": "^7.1.2",
    "@angular/core": "^7.1.2",
    "@angular/platform-browser": "^7.1.2",
    "@angular/platform-browser-dynamic": "^7.1.2",
    "@angular/platform-server": "^7.1.2",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jasmine": "^2.8.12",
    "@types/jsdom": "^12.2.0",
    "@types/node": "^8.10.38",
    "ajv": "^6.6.1",
    "core-js": "^2.6.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jasmine": "^3.3.1",
    "jasmine-core": "^3.3.0",
    "jsdom": "^12.2.0",
    "jwt-inspect": "^0.1.0",
    "karma": "^3.1.3",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-html-reporter": "^1.4.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "4.0.0-rc.2",
    "rollup": "^0.66.6",
    "rxjs": "^6.3.3",
    "standard-version": "^4.4.0",
    "ts-loader": "^5.3.1",
    "ts-node": "^6.2.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "webpack": "^4.27.1",
    "zone.js": "^0.8.26"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
